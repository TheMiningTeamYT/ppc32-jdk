# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
# Do not trim everywhere: makefiles, configs are not usually follows this policy
#trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[hotspot/**.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[jdk/**.{c,h}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
